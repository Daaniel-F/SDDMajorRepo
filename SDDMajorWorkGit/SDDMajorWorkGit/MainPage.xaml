<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDDMajorWorkGit.MainPage"
             x:DataType="Grid"
             BackgroundColor="{StaticResource Background1}">

    <Grid RowDefinitions="*, 0.15*">
        <ScrollView>
            <Grid RowDefinitions="250, *" RowSpacing="20">
                <Frame Grid.Row="0"
                       HasShadow="False" Background="{StaticResource AccentBlueGradient}"/>
                <Label Grid.Row="0"
                       Text="Home" FontAttributes="Bold" FontSize="160"
                       VerticalTextAlignment="End" HorizontalTextAlignment="Start"/>
            </Grid>
        </ScrollView>
    </Grid>

</ContentPage>

